<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_menu_bar"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:background="@drawable/edittext_modelo"
    android:orientation="horizontal"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/btnmenu"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/background_iconos"
        android:src="@drawable/hogar" />

    <ImageView
        android:id="@+id/btniconos"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/background_iconos"
        android:src="@drawable/aplicaciones" />

    <ImageView
        android:id="@+id/btnperfil"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/background_iconos"
        android:src="@drawable/usuario" />

    <ImageView
        android:id="@+id/btncarrito"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/background_iconos"
        android:src="@drawable/carrito_de_compras" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona un Método de Pago"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total a pagar: S/. 0.00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:padding="16dp"
            android:background="@drawable/edittext_modelo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Métodos de Pago Disponibles"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/rgMetodoPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Transferencia Bancaria -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_modelo"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbTransferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transferencia Bancaria"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- Tarjeta de Crédito -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_modelo"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbTarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarjeta de Crédito/Débito"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- Billetera Digital -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_modelo"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbBilletera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billetera Digital (Yape/Plin)"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- Pago Contra Entrega -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edittext_modelo"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rbContraEntrega"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago Contra Entrega"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>
        </RadioGroup>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:spacing="12dp">

            <Button
                android:id="@+id/btnConfirmarPago"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Confirmar Pago"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCancelarPago"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Cancelar"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#D32F2F"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

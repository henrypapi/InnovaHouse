<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_2"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Barra Superior de Navegaci칩n -->
        <LinearLayout
            android:id="@+id/top_menu_bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/edittext_modelo"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnmenu"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/background_iconos"
                android:src="@drawable/hogar" />

            <ImageView
                android:id="@+id/btniconos"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/background_iconos"
                android:src="@drawable/aplicaciones" />

            <ImageView
                android:id="@+id/btnperfil"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/background_iconos"
                android:src="@drawable/usuario" />

            <ImageView
                android:id="@+id/btncarrito"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/background_iconos"
                android:src="@drawable/carrito_de_compras" />

        </LinearLayout>

        <!-- Barra Inferior de Paginaci칩n -->
        <LinearLayout
            android:id="@+id/bottom_pagination_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#E0E0E0"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/btnPrevious"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/editar"
                android:scaleType="centerInside"
                android:rotation="180"
                android:contentDescription="Anterior" />

            <TextView
                android:id="@+id/tvPaginacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="P치gina 1 de 1"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/editar"
                android:scaleType="centerInside"
                android:contentDescription="Siguiente" />

        </LinearLayout>

        <!-- Contenido Principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/top_menu_bar"
            android:layout_above="@id/bottom_pagination_bar">

            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Buscador -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/busqueda"
                    android:paddingEnd="12dp"
                    android:contentDescription="Buscar"
                    android:tint="#1976D2" />

                <EditText
                    android:id="@+id/etBuscar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="Buscar producto..."
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:textColorHint="#BDBDBD" />
            </LinearLayout>

            <!-- RecyclerView de Productos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerProductos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:scrollbars="vertical" />

        </LinearLayout>

        <!-- Bot칩n Flotante Agregar -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/agregar"
            android:backgroundTint="#4CAF50"
            android:contentDescription="Agregar producto" />

    </RelativeLayout>

</FrameLayout>
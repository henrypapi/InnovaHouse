<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient_2"
    android:id="@+id/main"
    tools:context=".PerfilActivity">


    <!-- BARRA SUPERIOR -->
    <LinearLayout
        android:id="@+id/top_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@drawable/edittext_modelo"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnmenu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/hogar" />

        <ImageView
            android:id="@+id/btniconos"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/aplicaciones" />

        <ImageView
            android:id="@+id/btnperfil"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/usuario" />

        <ImageView
            android:id="@+id/btncarrito"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/carrito_de_compras" />
    </LinearLayout>


    <!-- CONTENIDO DESLIZABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_menu_bar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TARJETA PRINCIPAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_color_verde"
                android:padding="24dp"
                android:orientation="vertical">

                <!-- TÍTULO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi cuenta"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="end"/>

                <!-- NOMBRE -->
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Apellido"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- CORREO -->
                <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="correo@ejemplo.com"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp" />

                <!-- ROL -->
                <TextView
                    android:id="@+id/tvRol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rol: usuario"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp" />

                <!-- BOTÓN CERRAR SESIÓN -->
                <Button
                    android:id="@+id/btnCerrarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerrar sesión"
                    android:textStyle="bold"
                    android:backgroundTint="#B00020"
                    android:textColor="@android:color/white"
                    android:padding="12dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

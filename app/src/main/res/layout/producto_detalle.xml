<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@drawable/edittext_modelo"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnmenu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/hogar" />

        <ImageView
            android:id="@+id/btniconos"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/aplicaciones" />

        <ImageView
            android:id="@+id/btnperfil"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/usuario" />

        <ImageView
            android:id="@+id/btncarritoNav"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/carrito_de_compras" />
        </LinearLayout>

    <!-- Barra de Botones Admin -->
    <LinearLayout
        android:id="@+id/admin_action_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/top_menu_bar"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        android:background="#E8F5E9">

        <!-- Botón Editar -->
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Editar"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- Botón Eliminar -->
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Eliminar"
            android:backgroundTint="#D32F2F"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/admin_action_bar"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:spacing="6dp">

            <!-- Botón Comprar -->
            <Button
                android:id="@+id/btnComprar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Comprar"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="6dp" />

            <!-- Botón Agregar Carrito (icono) -->
            <ImageView
                android:id="@+id/btnAgregarCarritoDetalle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/agregar"
                android:padding="10dp"
                android:background="@drawable/button_modelo"
                android:contentDescription="Agregar al carrito"
                android:scaleType="centerInside"
                android:layout_marginEnd="6dp"
                android:tint="#1976D2" />

            <!-- Botón Salir -->
            <Button
                android:id="@+id/btnSalir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Salir"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- 2. CONTENIDO PRINCIPAL: DETALLE DEL PRODUCTO (Entre las barras, con desplazamiento) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/admin_action_bar"
        android:layout_above="@id/bottom_action_bar"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="12dp"
        android:background="@android:color/transparent">

        <!-- ScrollView para el contenido deslizable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <!-- TARJETA PRINCIPAL DEL PRODUCTO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/card_background"
                    android:layout_marginBottom="20dp">

                    <!-- Nombre del Producto -->
                    <TextView
                        android:id="@+id/txtNombreDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Refrigeradora"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <!-- Imagen del Producto -->
                    <ImageView
                        android:id="@+id/imgProductoDetalle"
                        android:layout_width="160dp"
                        android:layout_height="200dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_horizontal"
                        android:background="#F5F5F5"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Precio (Destacado) -->
                    <TextView
                        android:id="@+id/txtPrecioDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="S/. 1800"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#00796B"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                </LinearLayout>

                <!-- DESCRIPCIÓN Y DETALLES TÉCNICOS -->

                <!-- Sección Descripción -->
                <TextView
                    android:id="@+id/txtDescripcionDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aquí se mostrará la descripción del producto."
                    android:textSize="15sp"
                    android:textColor="#424242"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingMultiplier="1.4" />

                <!-- Sección Detalles Técnicos -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Especificaciones Técnicas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/txtEspecificacionesDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando especificaciones..."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.6"
                    android:layout_marginBottom="40dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
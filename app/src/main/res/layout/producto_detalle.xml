<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@drawable/edittext_modelo"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnmenu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/hogar" />

        <ImageView
            android:id="@+id/btniconos"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/aplicaciones" />

        <ImageView
            android:id="@+id/btnperfil"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/usuario" />

        <ImageView
            android:id="@+id/btncarrito"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/background_iconos"
            android:src="@drawable/carrito_de_compras" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent">

        <!-- Botón Editar -->
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="11sp"
            app:icon="@drawable/editar"
            android:layout_marginEnd="8dp" />

        <!-- Botón Eliminar -->
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:textSize="10sp"
            android:textStyle="bold"
            app:icon="@drawable/borrar"/>

        <!-- Botón Comprar -->
        <Button
            android:id="@+id/btnComprar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="Comprar"
            android:background="#A6FF3C"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="8dp" />

        <!-- Botón Añadir al Carrito -->
        <Button
            android:id="@+id/btnCarrito"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=" "
            android:background="#FF5C5C"
            android:drawableStart="@drawable/carritodecompras"
            android:drawablePadding="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>


    <!-- 2. CONTENIDO PRINCIPAL: DETALLE DEL PRODUCTO (Entre las barras, con desplazamiento) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/top_menu_bar"
        android:layout_above="@id/bottom_action_bar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:background="@android:color/transparent">

        <!-- ScrollView para el contenido deslizable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- TARJETA PRINCIPAL DEL PRODUCTO (Fondo de color con bordes redondeados) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp"

                    android:layout_marginBottom="24dp"

                    > <!-- Asume un drawable con el color de fondo y el borde grande redondeado de la imagen -->

                    <!-- Nombre del Producto -->
                    <TextView
                        android:id="@+id/txtNombreDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refrigeradora"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"/>

                    <!-- Imagen del Producto -->
                    <ImageView
                        android:id="@+id/imgProductoDetalle"
                        android:layout_width="180dp"
                        android:layout_height="250dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:layout_marginBottom="24dp"/>

                    <!-- Precio (Caja Verde/Cyan) -->
                    <TextView
                        android:id="@+id/txtPrecioDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/. 1800"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:background="#56EEFF"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>


                <!-- DESCRIPCIÓN Y DETALLES TÉCNICOS -->

                <!-- Sección Descripción -->
                <TextView
                    android:id="@+id/txtDescripcionDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aquí se mostrará la descripción del producto."
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Placeholder para Descripción -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="24dp"/>

                <!-- Sección Detalles Técnicos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles tecnicos"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Placeholder para Detalles Técnicos -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="8dp"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="40dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
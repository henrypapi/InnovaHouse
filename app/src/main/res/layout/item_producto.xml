<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/card_background"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp"
        android:background="#F5F5F5" />

    <!-- Nombre del producto -->
    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del producto"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="6dp" />

    <!-- Precio -->
    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/. 0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#00796B"
        android:layout_marginBottom="8dp" />

    <!-- Descripci贸n -->
    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripci贸n breve del producto..."
        android:textSize="13sp"
        android:textColor="#666666"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="12dp" />

    <!-- Botones: Ver Detalles + Agregar al Carrito -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Bot贸n Ver Detalles -->
        <Button
            android:id="@+id/btnVerDetalles"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Ver Detalles"
            android:textStyle="bold"
            android:textSize="13sp"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <!-- Bot贸n Agregar (Icono) -->
        <ImageView
            android:id="@+id/btnAgregarCarrito"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/agregar"
            android:padding="8dp"
            android:background="@drawable/button_modelo"
            android:contentDescription="Agregar al carrito"
            android:scaleType="centerInside"
            android:tint="#1976D2" />
    </LinearLayout>

</LinearLayout>
